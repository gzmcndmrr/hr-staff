{
  "name": "hr-staff",
  "version": "1.0.0",
  "description": "HR Staff Management System with LitElement, TypeScript, Tailwind CSS, and Redux Toolkit",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "lit",
    "typescript",
    "tailwind",
    "redux-toolkit",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@vaadin/router": "^2.0.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lit": "^3.1.0",
    "lucide": "^0.523.0",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@web/test-runner": "^0.20.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^3.2.4"
  }
}
